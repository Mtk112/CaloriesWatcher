<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.PedometerSettings">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/pedometer_settings_headline" />

    <TextView
        android:id="@+id/textViewWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pedometer_settings_edit_weight"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewEditStepLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pedometer_settings_edit_step_lenght"
        android:layout_below="@+id/textViewWeight"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <EditText
        android:id="@+id/editTextWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewWeight"
        android:layout_alignStart="@+id/editStepLength"
        android:inputType="number"/>

    <EditText
        android:id="@+id/editStepLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewEditStepLength"
        android:layout_centerHorizontal="true"
        android:inputType="number"/>

</RelativeLayout>
